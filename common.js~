function ResultArray(n, cb) {
  this.dst = new Array(n);
  this.counter = 0;
  this.cb = cb;
}

ResultArray.prototype.makeSetter = function(index) {
  var self = this;
  return function(err, value) {
    if (err) {
      self.cb(err);
    } else {
      self.dst[index] = value;
      self.counter++;
      if (self.counter == self.dst.length) {
	self.cb(null, self.dst);
      }
    }
  };
}
